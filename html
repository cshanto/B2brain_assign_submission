<script>
    const request = new XMLHttpRequest();
    request.open("GET","https://tva.staging.b2brain.com/search/autocomplete_org_all/");
    request.send();
    request.onload = () => {
        if (request.status === 200){
            console.log(JSON.parse(request.response));
        }else{
        console.log(request)
        console.log('error ${request.status}')
        }
    }
</script>
